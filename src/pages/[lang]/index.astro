---
// src/pages/[lang]/index.astro

// Para rutas dinámicas, exportamos getStaticPaths
export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'eu' } }
  ];
}

// Generación estática
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { t, tPath } from '../../lib/translations';

const { lang } = Astro.params;

// Validamos el parámetro
const supported = ['es', 'eu'];
if (!supported.includes(lang)) {
  throw Astro.redirect(`/es/`);
}

const title = t(lang, 'home.title');
---
<BaseLayout lang={lang} title={title}>
  <!-- Hero Section -->
  <section id="inicio" class="hero">
      <div class="hero-background">
        <div class="hero-shapes">
          <div class="shape shape-1"></div>
          <div class="shape shape-2"></div>
          <div class="shape shape-3"></div>
        </div>
        <div class="hero-overlay"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">
            <span class="typing-text">{t(lang, 'hero.title')}</span>
            <br>
            <span class="highlight">{t(lang, 'hero.title_')}</span>
          </h1>
          <p class="hero-subtitle">
            <span class="badge">🚀{t(lang, 'hero.badge')}</span>
            <span class="badge">⚡{t(lang, 'hero.badge_')}</span>
            <span class="badge">📈{t(lang, 'hero.badge__')}</span>
          </p>

          <div class="hero-cta">
            <a href=#contacto" class="btn btn-primary">
              <i class="fas fa-rocket"></i>
              {t(lang, 'hero.contacto')}
            </a>
          </div>
          <a href="#diferenciadores" class="btn btn-secondary">
              <i class="fas fa-play"></i>
              {t(lang, 'hero.diferencia')}
          </a>
        </div>
      </div>
    </section> 
  
    <!-- Problem/Solution Section -->
  <section class="problem-solution" id="arazoak">
    <div class="container">
        <div class="section-header">
            <h2>🚀 {t(lang, 'problema.libera')}</h2>
        </div>
        <div class="content-grid">
            <div class="problem-content">
                <h3>{t(lang, 'problema.problema')}</h3>
                <p>{t(lang, 'problema.sabemos')}</p>
            </div>
            <div class="solution-content">
                <h3>{t(lang, 'problema.nosotros')}</h3>
                <p>{t(lang, 'problema.solución')}</p>
            </div>
        </div>
    </div>
  </section>

  
  <!-- Differentiators Section -->
  <section id="diferenciadores" class="differentiators">
      <div class="container">
          <div class="section-header">
              <h2>🌟 {t(lang, 'diferencia.tu solución')}</h2>
              <p>{t(lang, 'diferencia.qué')}</p>
          </div>
          <div class="differentiators-grid">
              <div class="differentiator-card">
                  <div class="card-icon">
                      <i class="fas fa-robot"></i>
                  </div>
                  <h3>{t(lang, 'diferencia.hiper')}</h3>
                  <p>{t(lang, 'diferencia.nuestro')}</p>
                  <div class="card-highlight">{t(lang, 'diferencia.eficiencia')}</div>
              </div>
              <div class="differentiator-card">
                  <div class="card-icon">
                      <i class="fas fa-code"></i>
                  </div>
                  <h3>{t(lang, 'diferencia.especialización')}</h3>
                  <p>{t(lang, 'diferencia.foco')}</p>
                  <div class="card-highlight">{t(lang, 'diferencia.contenido')}</div>
              </div>
              <div class="differentiator-card">
                  <div class="card-icon">
                      <i class="fas fa-language"></i>
                  </div>
                  <h3>{t(lang, 'diferencia.bi')}</h3>
                  <p>{t(lang, 'diferencia.euskadi')}</p>
              </div>
          </div>
      </div>
  </section>

  <!-- Services Section -->
  <section id="servicios" class="services">
    <div class="container">
      <div class="section-header">
        <h2>🎓 {t(lang, 'servicios.nuestros')}</h2>
        <p>{t(lang, 'servicios.servicios')}</p>
      </div>
      <div class="services-grid">
          <div class="service-card">
              <div class="service-header">
                  <i class="fas fa-building"></i>
                  <h3>{t(lang, 'servicios.empresas')}</h3>
                  <p><span class="service-tag">{t(lang, 'servicios.bonificada')}</span></p>
              </div>
              <div class="service-content">
                  <div class="service-item">
                      <h4>{t(lang, 'servicios.medida')}</h4>
                      <p>{t(lang, 'servicios.diseño')}</p>
                  </div>
                  <div class="service-item">
                      <h4>{t(lang, 'servicios.gestión')}</h4>
                      <p>{t(lang, 'servicios.burocracia')}</p>
                  </div>
              </div>
          </div>
          <div class="service-card">
              <div class="service-header">
                  <i class="fas fa-users"></i>
                  <h3>{t(lang, 'servicios.trabajadores')}</h3>
                  <p><span class="service-tag">{t(lang, 'servicios.online')}</span></p>
              </div>
              <div class="service-content">
                  <div class="service-item">
                      <h4>{t(lang, 'servicios.síncrona')}</h4>
                      <p>{t(lang, 'servicios.clases')}</p>
                  </div>
                  <div class="service-item">
                      <h4>{t(lang, 'servicios.programas')}</h4>
                      <p>{t(lang, 'servicios.itinerario')}</p>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </section>

  <!-- Results Section -->
  <section id="resultados" class="results">
    <div class="container">
      <div class="section-header">
          <h2>📈 {t(lang, 'resultados.medir')}</h2>
          <p>{t(lang, 'resultados.bidedigitala')}</p>
      </div>
      <div class="results-grid">
          <div class="result-card">
              <div class="result-icon">
                  <i class="fas fa-chart-line"></i>
              </div>
              <h3>{t(lang, 'resultados.productividad')}</h3>
              <p>{t(lang, 'resultados.empleados')}</p>
          </div>
          <div class="result-card">
              <div class="result-icon">
                  <i class="fas fa-heart"></i>
              </div>
              <h3>{t(lang, 'resultados.retención')}</h3>
              <p>{t(lang, 'resultados.desarrollo')}</p>
          </div>
          <div class="result-card">
              <div class="result-icon">
                  <i class="fas fa-digital-tachograph"></i>
              </div>
              <h3>{t(lang, 'resultados.adaptación')}</h3>
              <p>{t(lang, 'resultados.empresa')}</p>
          </div>
          <div class="result-card">
              <div class="result-icon">
                  <i class="fas fa-eye"></i>
              </div>
              <h3>{t(lang, 'resultados.transparencia')}</h3>
              <p>{t(lang, 'resultados.paneles')}</p>
          </div>
      </div>
    </div>
  </section>

    <!-- CTA Section -->
    <section id="contacto" class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>💡 {t(lang, 'cta.preparado')}</h2>
          <p>{t(lang, 'cta.miles')}</p>
          
          <div class="contact-grid">
            <div class="contact-form">
                <h3>👉 {t(lang, 'cta.solicita')}</h3>
                <form class="form formulario-contacto" id="formulario-contacto">
                    <div class="form-group">
                        <input type="text" placeholder={t(lang, 'cta.nombre')} required>
                    </div>
                    <div class="form-group">
                        <input type="email" placeholder={t(lang, 'cta.email')} required>
                    </div>
                    <div class="form-group">
                        <input type="tel" placeholder={t(lang, 'cta.teléfono')} required>
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder={t(lang, 'cta.empresa')} required>
                    </div>
                    <div class="form-group">
                        <select required>
                            <option value="">{t(lang, 'cta.numero')}</option>
                            <option value="1-10">{t(lang, 'cta.1')}</option>
                            <option value="11-50">{t(lang, 'cta.11')}</option>
                            <option value="51-100">{t(lang, 'cta.51')}</option>
                            <option value="100+">{t(lang, 'cta.mas')}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <textarea placeholder={t(lang, 'cta.tareas')}></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-full">
                        <i class="fas fa-paper-plane"></i>
                        {t(lang, 'cta.solicitar')}
                    </button>
                </form>
              </div>
              
              <div class="contact-info">
                <h3>{t(lang, 'cta.propuesta')}</h3>
                <p>{t(lang, 'cta.dudas')}</p>
                
                <div class="contact-methods">
                    <div class="contact-method">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <strong>{t(lang, 'cta.email')}</strong>
                            <p>ostadarra@ostadarra.eus</p>
                        </div>
                    </div>
                    <div class="contact-method">
                        <i class="fas fa-phone"></i>
                        <div>
                            <strong>{t(lang, 'cta.teléfono')}</strong>
                            <p>+34 685 756 143</p>
                        </div>
                    </div>
                    <div class="contact-method">
                        <i class="fab fa-linkedin"></i>
                        <div>
                            <strong>LinkedIn</strong>
                            <p><a href="https://www.linkedin.com/in/juancarlosbeaskoetxea/">Juan Carlos Beaskoetxea</a></p>
                        </div>
                    </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
  <!--   <section class="testimonials">
        <div class="container">
            <div class="section-header">
                <h2>Nuestros Clientes Dicen...</h2>
                <p>Próximamente: Casos de éxito y Testimonios</p>
            </div>
            <div class="testimonials-placeholder">
                <div class="placeholder-card">
                    <i class="fas fa-quote-left"></i>
                    <p>Aquí irían logos de clientes satisfechos y testimonios reales destacando la eficiencia, la calidad y el valor de nuestro servicio.</p>
                </div>
            </div>
        </div>
    </section> -->





</BaseLayout>
