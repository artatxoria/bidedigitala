---
// src/components/Header.astro

import { tPath, t } from "../lib/translations";
import NavegacionPrincipal from "./NavegacionPrincipal.astro";

const { lang } = Astro.props;
const hasSecondaryNav = Astro.slots.has("secondary-nav");
---

<style>
  /* Header con dise√±o integrado como en diseinu-zerbitzua */
  .header-unified {
    position: sticky;
    top: 0;
    z-index: 1000;
    backdrop-filter: blur(16px);
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.97),
      rgba(255, 255, 255, 0.95)
    );
    border-bottom: 1px solid rgba(148, 163, 184, 0.35);
  }

  .nav-inner {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    max-width: 1120px;
    margin: 0 auto;
  }

  .nav-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-bottom {
    display: flex;
    justify-content: flex-end;
    width: 100%;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(148, 163, 184, 0.2);
  }

  /* Usamos :global() para que los estilos apliquen al contenido del slot */
  .nav-bottom :global(nav) {
    display: flex;
    justify-content: flex-end;
    width: 100%;
  }

  .nav-bottom :global(ul) {
    list-style: none;
    display: flex;
    gap: 1rem;
    padding: 0;
    margin: 0;
    font-size: 0.85rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .nav-bottom :global(li) {
    list-style: none;
  }

  .nav-bottom :global(a) {
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
    border: 1px solid transparent;
    color: #6b7280;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-bottom :global(a:hover) {
    border-color: rgba(148, 163, 184, 0.8);
    background: rgba(148, 163, 184, 0.08);
    color: #111827;
  }

  .nav-bottom :global(.nav-cta a) {
    padding: 0.4rem 0.95rem;
    border-radius: 999px;
    background: linear-gradient(135deg, #6e4f9e, #074aa3);
    border: 1px solid rgba(15, 23, 42, 0.08);
    color: #ffffff;
    font-size: 0.8rem;
    font-weight: 600;
    box-shadow: 0 12px 32px rgba(110, 79, 158, 0.6);
  }

  .nav-bottom :global(.nav-cta a:hover) {
    box-shadow: 0 18px 50px rgba(110, 79, 158, 0.8);
  }

  .logo-link {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 50px;
    width: auto;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    padding: 0;
    flex-direction: column;
    cursor: pointer;
  }

  .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    background-color: #1e3a8a;
    transition: background-color 0.3s ease;
  }

  @media (max-width: 768px) {
    .nav-top {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .nav-bottom {
      justify-content: center;
    }

    .nav-bottom :global(ul) {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

<header class="header-unified">
  <div class="nav-inner">
    <div class="nav-top">
      <a href={tPath("/", lang)} class="logo-link">
        <img
          src="/images/BideDigitala.png"
          alt="BideDigitala Logo"
          class="logo-img"
        />
      </a>

      <NavegacionPrincipal lang={lang} />

      <div class="nav-toggle">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>

    {
      hasSecondaryNav && (
        <div class="nav-bottom">
          <slot name="secondary-nav" />
        </div>
      )
    }
  </div>
</header>
