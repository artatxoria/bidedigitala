---
// src/components/Navegacion.astro
import { tPath, t } from "../lib/translations";
const { lang } = Astro.props;
---

<style>
    .cont-nav {
        width: 100%;
        max-width: 1120px;
        margin: 0 auto;
        padding: 0.75rem 1.5rem;
        display: flex;
        justify-content: flex-end;
        border-bottom: 1px solid rgba(148, 163, 184, 0.2);
    }
    .nav-menu {
        list-style: none;
        display: flex;
        gap: 1.2rem;
        padding: 0;
        margin: 0;
        font-size: 0.85rem;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
    }
    .nav-link {
        padding: 0.35rem 0.7rem;
        border-radius: 999px;
        border: 1px solid transparent;
        color: #6b7280; /* var(--text-soft) */
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    .nav-link:hover {
        border-color: rgba(148, 163, 184, 0.8);
        background: rgba(148, 163, 184, 0.08);
        color: #111827; /* var(--text-main) */
    }
    .nav-cta .btn {
        padding: 0.4rem 0.95rem;
        border-radius: 999px;
        background: linear-gradient(
            135deg,
            #6e4f9e,
            #074aa3
        ); /* var(--bide-purple-dark), var(--bide-blue) */
        border: 1px solid rgba(15, 23, 42, 0.08);
        color: #ffffff;
        font-size: 0.8rem;
        font-weight: 600;
        box-shadow: 0 12px 32px rgba(110, 79, 158, 0.6);
        text-decoration: none;
        display: inline-block;
    }
    .nav-cta .btn:hover {
        box-shadow: 0 18px 50px rgba(110, 79, 158, 0.8);
    }
</style>
<nav class="cont-nav" aria-label="NavegaciÃ³n secundaria">
    <ul class="nav-menu">
        <li class="nav-item">
            <a href={tPath("#inicio", lang)} class="nav-link"
                >{t(lang, "nav.home")}</a
            >
        </li>
        <li class="nav-item">
            <a href={tPath("#arazoak", lang)} class="nav-link"
                >{t(lang, "nav.problemas")}</a
            >
        </li>
        <li class="nav-item">
            <a href={tPath("#diferenciadores", lang)} class="nav-link"
                >{t(lang, "nav.valor")}</a
            >
        </li>
        <li class="nav-item">
            <a href={tPath("#servicios", lang)} class="nav-link"
                >{t(lang, "nav.servicios")}</a
            >
        </li>
        <li class="nav-item">
            <a href={tPath("#resultados", lang)} class="nav-link"
                >{t(lang, "nav.resultados")}</a
            >
        </li>
        <li class="nav-item">
            <div class="nav-cta">
                <a href="#contacto" class="btn btn-primary"
                    >{t(lang, "nav.diagnostico")}</a
                >
            </div>
        </li>
    </ul>
</nav>
