// Seleccionamos el diccionario según el idioma, fallback a español
const dict = translations[lang] || translations.es;
---
<style>
/* Services Section */
.services {
    padding: var(--section-padding);
    background: var(--bg-light);
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.service-card {
    background: var(--bg-white);
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    transition: transform 0.3s ease;
}

.service-card:hover {
    transform: translateY(-5px);
}

.service-icon {
    width: 70px;
    height: 70px;
    background: var(--secondary-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
}

.service-icon i {
    font-size: 1.8rem;
    color: var(--text-white);
}

.service-card h3 {
    color: var(--text-dark);
    margin-bottom: 1rem;
}

.service-card ul {
    list-style: none;
    margin-top: 1rem;
}

.service-card li {
    padding: 0.5rem 0;
    color: var(--text-light);
    position: relative;
    padding-left: 1.5rem;
}

.service-card li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--secondary-color);
    font-weight: bold;
}
</style>
    <!-- Servicios Section -->
    <section id="zerbitzuak" class="services">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">{dict.clave.title}</h2>
                <p class="section-subtitle">{dict.clave.subtitle}</p>
            </div>
            <div class="services-grid">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <h3>{dict.clave.titulo_1}</h3>
                    <p>{dict.clave.contenido_1}</p>
                    <ul>
                        <li>{dict.clave.item_1_1}</li>
                        <li>{dict.clave.item_1_2}</li>
                        <li>{dict.clave.item_1_3}</li>
                        <li>{dict.clave.item_1_4}</li>
                    </ul>
                </div>
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>{dict.clave.titulo_2}</h3>
                    <p>{dict.clave.contenido_2}</p>
                    <ul>
                        <li>{dict.clave.item_2_1}</li>
                        <li>{dict.clave.item_2_2}</li>
                        <li>{dict.clave.item_2_3}</li>
                    </ul>
                </div>
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-laptop-code"></i>
                    </div>
                    <h3>{dict.clave.titulo_3}</h3>
                    <p>{dict.clave.contenido_3}</p>
                    <ul>
                        <li>{dict.clave.item_3_1}</li>
                        <li>{dict.clave.item_3_2}</li>
                        <li>{dict.clave.item_3_3}</li>
                        <li>{dict.clave.item_3_4}</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
 
