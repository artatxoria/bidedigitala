---
<style>
/* Specialization Section */
.specialization {
    padding: var(--section-padding);
}

.specialization-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
}

.specialization-text p {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
}

.specialization-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-lg);
}


</style>

    <!-- Especialización Section -->
    <section id="espezializazioa" class="specialization">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">{dict.clave.title}</h2>
            </div>
            <div class="specialization-content">
                <div class="specialization-text">
                    <p>{dict.clave.contenido_1}</p>
                    <p>{dict.clave.contenido_2}</p>
                </div>
                <div class="specialization-image">
                    <img src="/images/business_training.jpg" alt="Enpresa Prestakuntza">
                </div>
            </div>
        </div>
    </section>

